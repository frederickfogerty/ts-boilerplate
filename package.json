{
  "name": "@frederickfogerty/ts-boilerplate",
  "version": "0.1.3",
  "description": "An opinionated npm module boilerplate with batteries included",
  "main": "index.js",
  "scripts": {
    "build": "tsc && babel dist -d dist",
    "build:watch": "tsc -w",
    "lint": "tslint 'src/**/*.ts{,x}' --type-check --format verbose",
    "prepublish": "npm run build && npm run test && npm run lint",
    "np": "np",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frederickfogerty/js-util.git"
  },
  "author": "Frederick Fogerty",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/frederickfogerty/js-util/issues"
  },
  "homepage": "https://github.com/frederickfogerty/js-util#readme",
  "devDependencies": {
    "@types/jest": "^15.1.32",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.0",
    "babel-preset-node6": "^11.0.0",
    "jest": "^16.0.2",
    "np": "frederickfogerty/np#7a14e2fba55ba0bd01a43a5ee201889814b03b0d",
    "ts-jest": "^0.1.11",
    "tslint": "^3.15.1",
    "tslint-config-xo": "^0.2.0",
    "tslint-microsoft-contrib": "^2.0.13",
    "typescript": "^2.0.6"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/ts-jest/preprocessor.js",
    "testPathDirs": [
      "src"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {
    "jest": "^16.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
